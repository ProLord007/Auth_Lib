{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "module": "ES2020",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "isolatedModules": false
    },
    "include": ["src"],
    "exclude": ["node_modules/", "**/__tests__/*"],
    "extends": "./.svelte-kit/tsconfig.json",
}