{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noImplicitAny": true,
		"module": "es2020",
		"moduleResolution": "Node",
		"target": "es2020",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": false
	},
	"include": ["src"],
	"exclude": ["node_modules/", "**/__tests__/*"]
}
