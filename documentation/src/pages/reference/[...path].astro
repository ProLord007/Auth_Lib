---
import DocumentLayout from "@layouts/DocumentLayout.astro";
import MainContentTable from "@components/content-table/MainContentTable.astro";
import { type Page, getStaticPathsFromPageGlob } from "src/lib/content";
import type { GetStaticPaths } from "astro";

export const getStaticPaths: GetStaticPaths = async () => {
	return getStaticPathsFromPageGlob(await Astro.glob("/content/reference/*/*.md"));
};

type Props = {
	page: Page;
};

const { page } = Astro.props;
---

<DocumentLayout title={page.title} headings={page.getHeadings()} ContentTable={MainContentTable}>
	<page.Content />
</DocumentLayout>
