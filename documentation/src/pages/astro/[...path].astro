---
import DocumentLayout from "@layouts/DocumentLayout.astro";
import AstroContentTable from "@components/content-table/AstroContentTable.astro";
import { type Page, handleGetStaticPaths } from "src/lib/content";
import type { GetStaticPaths } from "astro";

export const getStaticPaths: GetStaticPaths = handleGetStaticPaths(
	await Astro.glob("/content/astro/*/*.md")
);

type Props = {
	page: Page;
};

const { page } = Astro.props;
---

<DocumentLayout
	title={page.title}
	headings={page.getHeadings()}
	ContentTable={AstroContentTable}
	external="astro"
>
	<page.Content />
</DocumentLayout>
