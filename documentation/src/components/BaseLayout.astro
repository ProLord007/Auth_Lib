---
import Content from "@components/Content.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

const props = Astro.props;

interface Props {
    title: string | null;
}

const learnSections = getSections(
    await Astro.glob("/src/pages/learn/*/index.md"),
    "learn"
);
const learnPages = getPages(
    await Astro.glob("/src/pages/learn/*/*.md"),
    "learn"
);
const referenceSections = getSections(
    await Astro.glob("/src/pages/reference/*/index.md"),
    "reference"
);
const referencePages = getPages(
    await Astro.glob("/src/pages/reference/*/*.md"),
    "reference"
);

const learnContent = getContent(learnSections, learnPages);

const referenceContent = getContent(referenceSections, referencePages);
const tab: "learn" | "reference" =
    (Astro.url.pathname.match(/^\/(\w+)\//)?.[1] as any) || "learn";
console.log(Astro.url.href)
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>
            {props.title || "Lucia"}
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link
            rel="preconnect"
            href="https://fonts.gstatic.com"
            crossorigin="anonymous"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="fixed border-b z-50 bg-white w-full divide-y">
            <div class="py-3">
                <a class="text-2xl font-semibold px-4 sm:px-8 lg:px-12" href="/"
                    >Lucia</a
                >
            </div>
            <div class="py-2 px-4 sm:px-8 lg:px-12 sm:hidden">
                <p>menu</p>
            </div>
        </div>
        <div class="min-h-screen px-4 sm:px-8 lg:px-12 ">
            <div class="hidden md:block shrink-0 pt-20 fixed w-72 h-screen">
                <Content
                    client:load
                    {learnContent}
                    {referenceContent}
                    tab={tab}
                    currentTitle={props.title}
                />
            </div>
            <main class="px-4 pt-36 min-w-0 pb-24 ml-72">
                <slot />
            </main>
        </div>
        <style>
            body {
                font-family: "IBM Plex Sans", sans-serif;
            }
        </style>
    </body>
</html>
