---
import Content from "@components/Content.svelte";
import MenuButton from "@components/MenuButton.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

const props = Astro.props;

interface Props {
    title: string | null;
}

const learnSections = getSections(
    await Astro.glob("/src/pages/learn/*/index.md"),
    "learn"
);
const learnPages = getPages(
    await Astro.glob("/src/pages/learn/*/*.md"),
    "learn"
);
const referenceSections = getSections(
    await Astro.glob("/src/pages/reference/*/index.md"),
    "reference"
);
const referencePages = getPages(
    await Astro.glob("/src/pages/reference/*/*.md"),
    "reference"
);

const learnContent = getContent(learnSections, learnPages);

const referenceContent = getContent(referenceSections, referencePages);
const tab: "learn" | "reference" =
    (Astro.url.pathname.match(/^\/(\w+)\//)?.[1] as any) || "learn";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>
            {props.title || "Lucia"}
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link
            rel="preconnect"
            href="https://fonts.gstatic.com"
            crossorigin="anonymous"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="fixed z-50 w-full bg-white lg:bg-transparent">
            <div
                class="py-3 flex w-full place-content-between px-4 sm:px-8 lg:px-12"
            >
                <a class="text-2xl font-semibold" href="/">Lucia</a>
                <div>
                    <MenuButton client:load />
                </div>
            </div>
        </div>
        <div class="min-h-screen">
            <Content
                client:load
                {learnContent}
                {referenceContent}
                tab={tab}
                currentTitle={props.title}
            />
            <main class="pt-36 lg:pt-20 min-w-0 pb-24 lg:ml-72 px-4 sm:px-8 lg:px-12">
                <div class="lg:pl-4">
                    <slot />
                </div>
            </main>
        </div>
        <style>
            body {
                font-family: "IBM Plex Sans", sans-serif;
            }
        </style>
    </body>
</html>
