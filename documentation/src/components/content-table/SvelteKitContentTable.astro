---
import ExternalContentTable from "./ExternalContentTable.svelte";
import { ConfigGlob, getSections } from "src/lib/content.js";

interface Props {
	title: string;
}

const sections = await getSections(
	import.meta.glob("/content/sveltekit/*/config.json") as ConfigGlob,
	await Astro.glob("/content/sveltekit/*/*.md")
);
---

<ExternalContentTable
	sections={sections}
	title="SvelteKit integration"
	currentPageTitle={Astro.props.title}
	client:load
/>
