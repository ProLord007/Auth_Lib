---
import ExternalContent from "./ExternalContent.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

interface Props {
	title: string;
}

const expressSections = getSections(await Astro.glob("/src/pages/express/*/index.md"), "express");
const expressPages = getPages(await Astro.glob("/src/pages/express/**/*.md"), "express");

const expressContent = getContent(expressSections, expressPages);
---

<ExternalContent
	content={expressContent}
	title="Express integration"
	documentTitle={Astro.props.title}
	client:load
/>
