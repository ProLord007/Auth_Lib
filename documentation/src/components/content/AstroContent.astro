---
import ExternalContent from "./ExternalContent.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

interface Props {
	title: string;
}

const astroSections = getSections(await Astro.glob("/src/pages/astro/*/index.md"), "astro");
const astroPages = getPages(await Astro.glob("/src/pages/astro/**/*.md"), "astro");

const astroContent = getContent(astroSections, astroPages);
---

<ExternalContent
	content={astroContent}
	title="Astro integration"
	documentTitle={Astro.props.title}
	client:load
/>
