---
import FrameworkContent from "./FrameworkContent.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

interface Props {
	title: string;
}

const sveltekitSections = getSections(
	await Astro.glob("/src/pages/sveltekit/*/index.md"),
	"sveltekit"
);
const sveltekitPages = getPages(await Astro.glob("/src/pages/sveltekit/**/*.md"), "sveltekit");

const sveltekitContent = getContent(sveltekitSections, sveltekitPages);
---

<FrameworkContent
	content={sveltekitContent}
	framework="sveltekit"
	currentTitle={Astro.props.title}
	client:load
/>
