---
import ExternalContent from "./ExternalContent.svelte";
import { getContent, getPages, getSections } from "src/lib/content.js";

interface Props {
	title: string;
}

const nextjsSections = getSections(await Astro.glob("/src/pages/nextjs/*/index.md"), "nextjs");
const nextjsPages = getPages(await Astro.glob("/src/pages/nextjs/**/*.md"), "nextjs");

const nextjsContent = getContent(nextjsSections, nextjsPages);
---

<ExternalContent
	content={nextjsContent}
	title="Next.js integration"
	documentTitle={Astro.props.title}
	client:load
/>
